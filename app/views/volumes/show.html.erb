<div class="row">
  <!-- Information for the volume itself -->
  <div class="span12">

    <%- model_class = Volume -%>
    <div class="page-header">
      <h2>Volume information</h2>
    </div>

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:month) %>:</strong></dt>
      <dd><%= @volume.month %></dd>
      <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
      <dd><%= @volume.year %></dd>
      <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
      <dd><%= @volume.address %></dd>
      <dt><strong><%= model_class.human_attribute_name(:publisher) %>:</strong></dt>
      <dd><%= @volume.publisher %></dd>
      <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
      <dd><%= @volume.url %></dd>
    </dl>

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
      volumes_path, :class => 'btn'  %>
      <!--<%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_volume_path(@volume), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      volume_path(@volume),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>-->
    </div>
  </div>


  <!-- Information on the papers within the volume -->
  <div class="span3">
    <h2>Filter</h2>
    <h3>By year</h3>
  </div>
  <div class="span9">
    <h2>Papers</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <%- model_class_p = Paper -%>
          <th><%= model_class_p.human_attribute_name(:title) %></th>
          <th><%= model_class_p.human_attribute_name(:month) %></th>
          <th><%= model_class_p.human_attribute_name(:year) %></th>
          <th><%= model_class_p.human_attribute_name(:address) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% for paper in @volume.papers do %>
          <td><%= paper.title %></td>
          <td><%= paper.month %></td>
          <td><%= paper.year %></td>
          <td><%= paper.address %></td>
            <td>
            <%= link_to t('.view', :default => t("helpers.links.view")),
            paper_path(paper), :class => 'btn btn-primary' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_paper_path(paper), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            paper_path(paper),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
          </td>
          <% end %>

        </tr>
      </tbody>
    </table>
  </div>

  
</div>